<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:hint="아이디를 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/loginBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/loginBtn"
        app:layout_constraintTop_toBottomOf="@+id/inputId" />

    <TextView
        android:id="@+id/idTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:text="아이디"
        app:layout_constraintEnd_toStartOf="@+id/inputId"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pwdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="62dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toTopOf="@+id/userTypeGroup"
        app:layout_constraintEnd_toStartOf="@+id/inputPwd"
        app:layout_constraintTop_toBottomOf="@+id/idTxt"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="325dp"
        android:layout_marginBottom="50dp"
        android:text="LOGIN"
        app:layout_constraintBottom_toTopOf="@+id/joinBtn"
        app:layout_constraintStart_toEndOf="@+id/userTypeGroup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="73dp"
        android:layout_height="32dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="156dp"
        android:background="#00ff0000"
        android:text="JOIN"
        android:textColor="#ffc000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/joinTxt"
        app:layout_constraintTop_toBottomOf="@+id/inputPwd" />

    <RadioGroup
        android:id="@+id/userTypeGroup"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/joinBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPwd">

        <RadioButton
            android:id="@+id/teacherBtn"
            android:layout_width="92dp"
            android:layout_height="43dp"
            android:text="교사"
            tools:layout_editor_absoluteX="50dp"
            tools:layout_editor_absoluteY="349dp" />

        <RadioButton
            android:id="@+id/parentsBtn"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:text="학부모"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="349dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/joinTxt"
        android:layout_width="118dp"
        android:layout_height="21dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="164dp"
        android:text="Need an Account?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdTxt" />

